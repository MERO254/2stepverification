<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Frame 7 with custom drawable background -->
    <RelativeLayout
        android:id="@+id/frame_7"
        android:layout_width="400dp"
        android:layout_height="495dp"
        android:layout_centerInParent="true"
        android:clipToOutline="true"
        android:background="@drawable/frame_7" />

    <!-- Frame 8 with a white background -->
    <RelativeLayout
        android:id="@+id/frame_8"
        android:layout_width="412dp"
        android:layout_height="917dp"
        android:layout_below="@id/frame_7"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:background="#FFFFFF" />

    <!-- Frame 9 with a white background -->
    <RelativeLayout
        android:id="@+id/frame_9"
        android:layout_width="412dp"
        android:layout_height="917dp"
        android:layout_below="@id/frame_8"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:background="#FFFFFF" />

</RelativeLayout>
